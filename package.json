{
  "name": "hermes",
  "version": "3.0.0",
  "description": "A decentralized messaging app",
  "main": "dist/server.js",
  "dependencies": {
    "@types/highlightjs": "^9.12.0",
    "@types/marked": "^0.6.5",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cassandra-driver": "^4.1.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "highlightjs": "^9.12.0",
    "ipaddr.js": "^1.9.0",
    "jquery": "^3.4.1",
    "marked": "^0.7.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "web-push": "^3.3.5",
    "ws": "^7.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cassandra-driver": "^4.0.3",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.17.0",
    "@types/jquery": "^3.3.29",
    "@types/node": "^12.0.8",
    "@types/web-push": "^3.3.0",
    "@types/ws": "^6.0.1",
    "autoprefixer": "^9.6.0",
    "css-loader": "^3.0.0",
    "file-loader": "^4.0.0",
    "fs-extra": "^8.0.1",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "ts-loader": "^6.0.3",
    "tslint": "^5.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.2",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  },
  "scripts": {
    "build": "npm run build-server -s && npm run build-web -s",
    "build-server": "echo '[tsc] Compiling' && tsc && echo '[tsc] Done'",
    "build-web": "echo '[webpack] Compiling' && webpack && echo '[webpack] Done'",

    "watch-server": "nodemon --config server.nodemon.json",
    "watch-web": "nodemon --config web.nodemon.json",

    "lint": "tslint -c tslint.json src/**/*.ts",
    "lintFix": "tslint -c tslint.json --fix src/**/*.ts",

    "test": "npm run lint",

    "prepare-project": "node scripts/prepareProject.js && npm run build -s",
    "cleanup": "node scripts/cleanup.js",

    "postinstall": "npm run prepare-project -s",

    "prestart": "npm run prepare-project -s",
    "start": "node dist/server.js $PWD/config.json",
    "start-no-pre": "node dist/server.js $PWD/config.json",

    "debug": "node inspect dist/server.js $PWD/config.json"
  },
  "browserslist": [
    "defaults"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HermesMessenger/Hermes.git"
  },
  "author": "CoderDojo Majadahonda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HermesMessenger/Hermes/issues"
  },
  "homepage": "https://github.com/HermesMessenger/Hermes#readme"
}
