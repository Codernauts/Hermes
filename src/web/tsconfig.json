{
  "compilerOptions": {
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,

    "jsx": "react",
    "reactNamespace": "JSX",

    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",

    "paths": {
      "types/*": ["../@types/*"],
      "utils/*": ["./ts/utils/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
