{
  "compilerOptions": {
    "lib": [ "dom", "es2016" ],
    "target": "es5",
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",

    "removeComments": true,
    "sourceMap": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "ts/**/*"
  ]
}
