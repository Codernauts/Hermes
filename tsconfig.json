{
    "compilerOptions": {
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist/server",
        "target": "es6",
        "module": "commonjs"
    },
    "include": [
        "src/server/*", "src/server/utils/fileExists.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
