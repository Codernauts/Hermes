{
    "compilerOptions": {
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "inlineSourceMap": true,
        "outDir": "dist/server",
        "target": "es6",
        "module": "commonjs"
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
