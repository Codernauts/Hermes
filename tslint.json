{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-standard"
    ],
    "jsRules": {},
    "rules": {
        "indent": [true, "tabs"],
        "ter-indent": [true, "tab"],
        "comment-format": [true, "check-space"],
        "encoding": true,
        "linebreak-style": [true, "LF"],
        "semicolon": [true, "never"],
        "triple-equals": false,
        "no-empty": false
    },
    "rulesDirectory": []
}